@model IEnumerable<MyMvcApp.Models.User>

<h1>Списък с потребители</h1>

<table class="table">
    <thead>
        <tr>
            <th>Име</th>
            <th>Имейл</th>
            <th>Роля</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName @user.LastName</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    <a asp-action="Edit" asp-controller="User" asp-route-id="@user.Id" class="btn btn-primary">Редактирай</a>
                    <form asp-action="Delete" asp-controller="User" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@user.Id" />
                        <button type="submit" class="btn btn-danger">Изтрий</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>